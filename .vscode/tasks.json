{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/e-sharp-minor.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish Debug linux-arm",
            "command": "dotnet",
            "type": "process",
            "args" : ["publish", "--configuration", "Debug", "--runtime", "linux-arm"],
            "problemMatcher": "$msCompile"
        }
    ]
}