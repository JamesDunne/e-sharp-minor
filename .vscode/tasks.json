{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/e-sharp-minor.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish and sync to pi",
            "command": "./sync.sh",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}